{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!
{% endblock %}

{% block body %}
	<div class="container">

		<div class="row">
			<div class="col-6">
				{{ form_start(form) }}
				<button class="btn btn-success">{{ button_label|default('Save') }}</button>
				{{ form_end(form) }}
			</div>
			<div class="col-6">
             <h1>Adresse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Cp</th>
                <th>Pays</th>
                <th>Tel</th>
                <th>Status</th>
               
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                <td>{{ adresse.id }}</td>
                <td>{{ adresse.adresse }}</td>
                <td>{{ adresse.ville }}</td>
                <td>{{ adresse.cp }}</td>
                <td>{{ adresse.pays }}</td>
                <td>{{ adresse.tel }}</td>
                <td>{{ adresse.status ? 'Yes' : 'No' }}</td>
              
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            
            </div>
		</div>

		<hr>


	</div>

{% endblock %}
